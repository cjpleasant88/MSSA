<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!--If development environment, gets bootstrap locally-->
    <environment include="Development">
        <link rel="stylesheet"
              asp-href-include="/lib/bootstrap/dist/**/*.css"
              asp-href-exclude="**/*-reboot*,**/*-grid*" />
    </environment>
    <!--Below uses cdn to get bootstrap for performance in not a development environment, if unable to, file is corupt, falls back to local bootstrap-->
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
              integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
              crossorigin="anonymous"
              asp-fallback-href-include="/lib/bootstrap/dist/**/*.css"
              asp-fallback-href-exclude="**/*-reboot*,**/*-grid*"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute"
              asp-suppress-fallback-integrity="true">
    </environment>

    <link rel="stylesheet" asp-href-include="/lib/font-awesome/css/*.css" />
    <title>Caleb's Sports Store</title>
</head>
<body>
    <div class="navbar navbar-inverse bg-inverse" role="navigation">
        <!--<div class="row">-->
            <a class="col navbar-brand" href="#">CALEB'S SPORTS STORE</a>

            <div class="col-4 text-right">
                @await Component.InvokeAsync("CartSummary") 
            </div>
       <!--</div>-->
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>
